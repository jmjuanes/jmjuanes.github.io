---
{
    "title": "My Projects",
    "description": "A collection of my open source projects.",
    "layout": "page.mustache",
    "permalink": "/projects.html"
}
---
<div class="flex flex-col gap-12">
{{#each site.data.projects}}
    <div class="flex flex-col gap-2">
        {{#if date}}
        <div class="text-base text-gray-600 italic">{{date}}</div>
        {{/if}}
        <div class="text-2xl font-bold leading-tight underline decoration-2 underline-offset-2">{{name}}</div>
        <div class="text-gray-800 text-xl text-justify leading-relaxed">{{description}}</div>
        {{#if links}}
        <div class="flex flex-col sm:flex-row flex-wrap gap-4 mt-0">
            {{#each links}}
            <a class="flex items-center gap-1 hover:underline decoration-2 underline-offset-1" href="{{url}}">
                <span class="text-lg font-bold lowercase">{{text}}</span>
                <div class="flex items-center text-xl">
                    {{=icon icon="arrow-right"}}
                </div>
            </a>
            {{/each}}
        </div>
        {{/if}}
    </div>
{{/each}}
</div>
