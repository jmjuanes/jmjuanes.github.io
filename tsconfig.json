{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "allowImportingTsExtensions": true,
        "esModuleInterop": true,
        "module": "es6",
        "target": "es2024",
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "noEmit": true
    },
    "include": [
        "assets/*.ts",
        "assets/*.tsx"
    ],
    "exclude": [
        "node_modules/**/*",
        "*.js"
    ]
}