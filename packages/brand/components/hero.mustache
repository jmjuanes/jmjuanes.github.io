<section class="py-24 sm:py-40 flex flex-col gap-0 {{this.className}}" data-testid="hero">
    {{#if this.heading}}
    <h1 class="text-4xl sm:text-6xl lg:text-8xl font-bold tracking-tight leading-none font-heading">
        <span>{{!this.heading}}</span>
    </h1>
    {{/if}}
    {{#if this.description}}
    <div class="text-3xl sm:text-5xl leading-snug mt-10 first:mt-0">
        <span>{{!this.description}}</span>
    </div>
    {{/if}}
    {{#if this.actions}}
    <div class="flex flex-col md:flex-row flex-wrap gap-8 mt-10 first:mt-0">
        {{#each this.actions}}
        <a class="flex items-center gap-1 hover:underline decoration-4 underline-offset-2" href="{{this.url}}">
            <span class="text-3xl sm:text-4xl font-bold lowercase">{{!this.text}}</span>
            <div class="flex items-center text-4xl sm:text-5xl">
                {{>icon.mustache icon="arrow-right"}}
            </div>
        </a>
        {{/each}}
    </div>
    {{/if}}
</section>
