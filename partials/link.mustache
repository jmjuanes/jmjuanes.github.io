<div class="mb-4 flex flex-col gap-1">
    {{#if this.date}}
    <div class="text-base opacity-60 leading-none italic">
        {{this.date}}
    </div>
    {{/if}}
    <a class="underline block font-bold text-2xl sm:text-3xl decoration-gray-400 hover:decoration-gray-950 underline-offset-2" href="{{this.url}}">
        <span>{{this.title}}</span>
    </a>
    {{#if this.description}}
    <div class="text-lg sm:text-xl">
        {{this.description}}
    </div>
    {{/if}}
</div>
