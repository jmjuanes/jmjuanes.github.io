---
{
    "layout": "default.mustache"
}
---
{{>header.mustache}}
{{>>content.mustache}}
    <section class="mb-14">
        <div class="text-4xl sm:text-5xl font-bold leading-tight">
            <span>{{page.attributes.title}}</span>
        </div>
        {{#if page.attributes.description}}
        <div class="text-2xl sm:text-3xl leading-snug">
            <span>{{page.attributes.description}}</span>
        </div>
        {{/if}}
        {{#if page.attributes.date}}
        <div class="text-sm mt-2 opacity-50">
            <span>{{page.attributes.date}}</span>
        </div>
        {{/if}}
    </section>
    <section class="w-full">
        {{!@content}}
    </section>
{{/content.mustache}}
{{>footer.mustache}}
