---
{
    "layout": "base.mustache"
}
---
<div class="mb-12 flex flex-col gap-2">
    <div class="text-3xl sm:text-4xl md:text-5xl font-bold leading-tight">
        <span>{{page.attributes.title}}</span>
    </div>
    {{#if page.attributes.description}}
    <div class="text-2xl leading-normal italic">
        <span>{{page.attributes.description}}</span>
    </div>
    {{/if}}
    {{#if page.attributes.date}}
    <div class="text-sm opacity-60">
        <span>{{page.attributes.date}}</span>
    </div>
    {{/if}}
</div>
{{!@content}}
