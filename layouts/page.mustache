---
{
    "layout": "default.mustache"
}
---
{{>header.mustache}}
<main class="w-full max-w-5xl mx-auto px-8 py-10">
    <section class="mb-14">
        <div class="text-4xl sm:text-5xl md:text-6xl font-bold font-heading leading-tight">
            <span>{{page.attributes.title}}</span>
        </div>
        {{#if page.attributes.description}}
        <div class="text-xl sm:text-2xl md:text-3xl leading-snug font-medium opacity-80">
            <span>{{page.attributes.description}}</span>
        </div>
        {{/if}}
        {{#if page.attributes.date}}
        <div class="text-sm mt-2 opacity-60">
            <span>{{page.attributes.date}}</span>
        </div>
        {{/if}}
    </section>
    {{!@content}}
</main>
